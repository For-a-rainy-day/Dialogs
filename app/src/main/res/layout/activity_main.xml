<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/txt1"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Alert DIalog!"
        app:layout_constraintBottom_toTopOf="@+id/txt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/txt2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:rotationX="-8"
        android:rotationY="6"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        android:text="Custom Dialog!"
        app:layout_constraintBottom_toTopOf="@id/txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1" />



    <Button
        android:id="@+id/txt3"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Fragment Dialog"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        app:layout_constraintBottom_toTopOf="@id/txt4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />

    <Button
        android:id="@+id/txt4"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Data Picker Dialog"
        app:layout_constraintBottom_toTopOf="@id/txt5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt3" />

    <Button
        android:id="@+id/txt5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Time Picker Dialog"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        app:layout_constraintBottom_toTopOf="@id/txt6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt4" />


    <Button
        android:id="@+id/txt6"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="BottomSheet Dialog"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        app:layout_constraintBottom_toTopOf="@id/txt7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt5" />

    <Button
        android:id="@+id/txt7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Snackbar Dialog"
        android:textAllCaps="true"
        android:backgroundTint="@color/qizgish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt6" />
</androidx.constraintlayout.widget.ConstraintLayout>